$sql = "SELECT aq.*, aqs.aq_sensor_id, aqs.aq_sensor_room_num, aqs.aq_sensor_name
FROM aq_gas_level aq
JOIN aq_sensor aqs ON aq.gas_sensor = aqs.aq_sensor_id
ORDER BY aqs.aq_sensor_id
LIMIT $offset, $rows_per_page";
$result_table = mysqli_query($con, $sql);

while ($row = mysqli_fetch_assoc($result_table)){
        echo "<tr>";
        echo "<td>" . $row['aq_sensor_room_num'] . "</td>";
        echo "<td>" . $row['aq_sensor_id'] . "</td>";
        echo "<td>" . $row['aq_sensor_name'] . "</td>";
        echo "<td>" . $row['gas_date'] . "</td>";
        echo "<td>" . $row['gas_time'] . "</td>";
        echo "<td>" . $row['gas_level_data']  . ' ppm' . "</td>";
        echo "</tr>";
}   

